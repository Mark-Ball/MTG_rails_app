<div id="edit">
    <%= render "partials/top_bar" %>

    <h1>Edit listing</h1>

    <%= image_tag @card_image %>

    <%= form_with(model: @listing, local: true) do |form| %>
        <div>
            <%= form.label :condition %>
            <%= form.text_field :condition %>
        </div>
        <div>
            <%= form.label :price %>
            <%= form.text_field :price %>
        </div>
        <%= form.submit class: "button" %> 
    <% end %>
</div>