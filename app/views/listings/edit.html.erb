<div id="edit"> 
    <% @title = "Edit listing" %>
    <%= render "partials/top_bar" %>

    <h1>Edit listing</h1>

    <div class="flex-container">
        <%= image_tag @card_image %>

        <%= form_with(model: @listing, local: true) do |form| %>
            <div class="flex-col">
                <div>
                    <%= form.label :condition %>
                    <%= form.text_field :condition %>
                </div>
                <div>
                    <%= form.label :price %>
                    <%= form.text_field :price %>
                </div>
                <%= form.submit class: "button" %> 
            </div>
        <% end %>
    </div>
</div>