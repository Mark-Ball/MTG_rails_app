<div id="show">
    <%= render "partials/top_bar" %>

    <h1><%= @card.name %></h1>

    <div class="flex-container">
        <%= image_tag @card.image if @card.image.attached? %>

        <div>
            <table>
                <thead>
                    <tr>
                        <th class="table_left-align">Seller</th>
                        <th>Condition</th>
                        <th>Price</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @listings.each { |listing| %>
                        <tr>
                            <td class="table_left-align"><%= @users.find(listing.user_id).email %></td>
                            <td><%= listing.condition %></td>
                            <td><%= number_to_currency(listing.price / 100.0) %></td>
                            <td><%= link_to('<button type="button">Buy</button>'.html_safe, buy_listing_path(listing.id)) %></td>
                            <td></td>
                            <td></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="flex-col">
        <% if current_user && @listing.user_id == current_user.id %>
            <p><%= "Do you want to edit this listing?" %></p>
            <%= form_with(model: @listing, local: true) do |form| %>
                <div>
                    <%= form.label :condition %>
                    <%= form.text_field :condition %>
                </div>
                <div>
                    <%= form.label :price %>
                    <%= form.text_field :price %>
                </div>
                <%= form.submit class: "button" %> 
            <% end %>

            <p><%= "Do you want to delete this listing? This is irreversible" %></p>
            <%= form_with(url: listing_path, method: "delete") do %>
                <%= submit_tag "Delete", class: "delete-button"  %>
            <% end %>
        <% end %>
    </div>
</div>