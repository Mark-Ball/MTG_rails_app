<%= render "top_bar" %>

<h3>image</h3>

<h3>Filters</h3>

<%= form_with(model: @listing, url: new_listing_path, method: "get", local: true) do |form| %>
    <div>
        <%= form.label(:name) %>
        <%= form.text_field(:name) %>
    </div>
    <div>
        <%= form.label(:set) %>
        <%= form.text_field(:set) %>
    </div>
        <%= submit_tag("Search") %>
<% end %>

<% @listings.each_with_index { |listing, index| %>
    <% img = @cards.find(listing.card_id).image %>
    <%= link_to listing_path(@listings[index].id), :action => 'go' do %>
        <div>
            <%= image_tag img if img.attached? %>
            <%= number_to_currency(listing.price / 100.0) %>
        </div>
    <% end %>
<% } %>