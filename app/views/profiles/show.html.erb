<%= render "partials/top_bar" %>

<h1>Your profile</h1>

<div>
    Name: <%= @user.name unless @user.nil? %>
</div>
<div>
    Alias: <%= @user.alias unless @user.nil? %>
</div>
<% unless @address.nil? %>
    <div>
        Address: <%= @address.address %>
        <%= @address.suburb %>
        <%= @address.country %>
        <%= @address.postcode %>
    </div>
<% end %>
<div>
    Email: <%= @user.email unless @user.nil? %>
</div>

<%= link_to("Edit profile", edit_profile_path) %>

<%= link_to("Create new listing", new_listing_path) %>

<%= link_to("My listings", my_listings_path) %>