<%= render "partials/top_bar" %>

<h1>Edit your profile</h1>

<form method="POST" action="<%= edit_profile_path %>">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
    <div>
        <label for="name">Name</label>
        <input type="text_field" name="profile[name]" id="name" />
    </div>
    <div>
        <label for="alias">Alias</label>
        <input type="text_field" name="profile[alias]" id="alias" />
    </div>
    <div>
        <label for="email">Email</label>
        <input type="text_field" name="profile[email]" id="email" />
    </div>
    <div>
        <label for="address">Address</label>
        <input type="text_field" name="address[address]" id="address" />
    </div>    <div>
        <label for="suburb">Suburb</label>
        <input type="text_field" name="address[suburb]" id="suburb" />
    </div>
    <div>
        <label for="city">City</label>
        <input type="text_field" name="address[city]" id="city" />
    </div>
    <div>
        <label for="country">Country</label>
        <input type="text_field" name="address[country]" id="country" />
    </div>
    <div>
        <label for="postcode">Postcode</label>
        <input type="text_field" name="address[postcode]" id="postcode" />
    </div>
    <input type="submit" value="Update" />
</form>
